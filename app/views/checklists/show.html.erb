<%= @checklist.name %>
<%= @checklist.tasks.count %> Task(s)

<% if user_signed_in? %>
  <%= link_to @checklist, method: :delete do %>
    <i class="trash icon"></i>
  <% end %>
  <%= link_to [:edit, @checklist] do %>
    <i class="edit icon"></i>
  <% end %>
<% end %>

<%= render partial: 'checklists/task', locals: { task: Task.new } %>
<% @checklist.tasks.each do |task| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= task.name %>
          <% if user_signed_in? %>
             <%= link_to [@checklist, task], method: :delete do %>
              <i class="trash icon"></i>
            <% end %>
            <%= link_to [:edit, @checklist, task] do %>
              <i class="edit icon"></i>
            <% end %>
          <% end %>
        </h4>
      </div>
    </div>
  <% end %>
</div>
<%= link_to 'View All Checklists', checklists_path %>
