<%= @checklist.name %>
<%= @checklist.tasks.count %> tasks

<%= link_to 'Destroy', [@checklist], method: :delete %>
<%= link_to 'Edit', [:edit, @checklist] %>

<%= render partial: 'checklists/task', locals: { task: Task.new } %>
<% @checklist.tasks.each do |task| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= task.name %>
          <%= link_to 'Destroy', [@checklist, task], method: :delete %>
          <%= link_to 'Edit', [:edit, @checklist, task] %>
        </h4>
      </div>
    </div>
  <% end %>
</div>
<%= link_to 'Back', checklists_path %>
